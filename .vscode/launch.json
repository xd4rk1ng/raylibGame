{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (CMake/MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${command:cmake.launchTargetDirectory}",
      "args": [],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: build"
    },
    {
      "name": "Release (CMake/MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${command:cmake.launchTargetDirectory}",
      "args": [],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: build",
      "environment": [
        { "name": "CMAKE_BUILD_TYPE", "value": "Release" }
      ]
    }
  ]
}
